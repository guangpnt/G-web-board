<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../css/main.css">
    <title>webboard</title>
</head>

<body>
    <div class="nav-bar-mobile">
        <a href="/" class="logo"></a>
        <div class="nav-menu">
            <% if(email == null) { %>
                <a href="/login" class="add-topic"></a>
                <a href="/login" class="account"></a>
            <% } %>
            <% if(email !== null) { %>
                <a href="/add" class="add-topic"></a>
                <div class="profile-btn"><%= username.charAt(0) %></div>
            <% } %>
        </div>
    </div>
    <div class="profile-bg hide"></div>
        <div class="profile-menu hide">
            <div class="close-btn">
                <span class="left-line"></span>
                <span class="right-line"></span>
            </div>
            <ul>
                <li>
                    <a href="/">Home</a>
                </li>
                <li>
                    <a href="/profile">Profile</a>
                </li>
                <li>
                    <a href="/mytopic">My topic</a>
                </li>
                <li>
                    <a href="/logout">Sign out</a>
                </li>
            </ul>
        </div>

    <div class="profile-box">
        <h1>Profile</h1>
        <h5>Username : <%= username %></h5>
        <h5>Email : <%= email %></h5>
        <a href="/logout">Sign out</a>
    </div>

    <script src="../js/main.js"></script>
</body>

</html>